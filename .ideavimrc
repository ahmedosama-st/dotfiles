set rnu
set idearefactormode=insert
set incsearch
set ideajoin
set clipboard+=unnamed
set highlightedyank
set surround
set NERDTree
set scrolloff=18
let mapleader = " "

" Editor remaps
imap jk <Esc>
nnoremap <M-d> <C-d>
nnoremap <M-u> <C-u>
nnoremap s _
nnoremap e $

" Tabs navigation remapping
nmap <C-h> <C-w><C-h>
nmap <C-l> <C-w><C-l>
nmap <C-j> <C-w><C-j>
nmap <C-k> <C-w><C-k>
nmap <leader>. <C-w>o

" Actions remaps
nmap <leader>sl :action SplitVertically<cr>
nmap <leader>sv :action SplitHorizontally<cr>
nmap <S-k> :action MoveStatementUp<cr>
nmap <S-j> :action MoveStatementDown<cr>
nmap gp :action RecentFiles<cr>
nmap <leader>r :action ReformatCode<cr>
nmap <leader>sb :action ViewStatusBar<cr>
nmap <leader>gi :action GotoImplementation<cr>
nmap <leader>gs :action GotoSuperMethod<cr>
nmap <leader>gd :action GotoDeclaration<cr>
nmap <leader>ghb :action Git.Branches<cr>
nmap <leader>ghp :action Git.Pull<cr>
nmap <leader>ghr :action Git.Configure.Remotes<cr>

